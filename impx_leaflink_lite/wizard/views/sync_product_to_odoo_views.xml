<odoo>

    <record id="sync_product_lines_view_form" model="ir.ui.view">
        <field name="name">sync_product_lines_view_form</field>
        <field name="model">sync.product.lines</field>
        <field name="arch" type="xml">
            <form string="Sync Product Lines">
                <footer>
                    <button string="Sync" type="object" name="sync_product_lines_to_odoo" class="btn-primary"/>
                    <button string="Cancel" class="btn btn-default" special="cancel"/>
